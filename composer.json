{
    "name": "zendframework/skeleton-application",
    "description": "Skeleton Application for Zend Framework zend-mvc applications",
    "type": "project",
    "license": "BSD-3-Clause",
    "keywords": [ "framework", "mvc", "zf" ],
    "repositories": [
        { "type": "git", "url": "https://github.com/atarasenkopublic/zendextend-dashboard.git" },
        { "type": "git", "url": "https://github.com/atarasenkopublic/zendextend.git" }
    ],

    "homepage": "http://framework.zend.com/",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zend-component-installer": "^1.0 || ^0.7 || ^1.0.0-dev@dev",
        "zendframework/zend-mvc": "^3.1",
        "zfcampus/zf-development-mode": "^3.1",
        "zendframework/zend-cache": "^2.7.1",
        "zendframework/zend-mvc-form": "^1.0",
        "zendframework/zend-json": "^3.0",
        "zendframework/zend-log": "^2.9",
        "zendframework/zend-mvc-console": "^1.1.10",
        "zendframework/zend-mvc-i18n": "^1.0",
        "zendframework/zend-mvc-plugins": "^1.0.1",
        "zendframework/zend-psr7bridge": "^0.2.2",
        "zendframework/zend-session": "^2.7.1",
        "zendframework/zend-servicemanager-di": "^1.0",
        "doctrine/doctrine-orm-module": "^1.1",
        "zf-commons/zfc-admin": "^0.3.1",
        "zf-commons/zfc-user": "3.x-dev",
        "zf-commons/zfc-user-doctrine-orm": "2.x-dev",
        "zf-commons/zfc-rbac": "^2.6",
        "zendextend/zendextend-dashboard": "dev-master"
    },

    "autoload": {
        "psr-4": {
            "Application\\": "module/Application/src/"
        }
    },

    "scripts": {
        "cs-fix": "phpcbf",
        "cs-check": "phpcs",

        "development-disable": "zf-development-mode disable",
        "development-enable": "zf-development-mode enable",
        "development-status": "zf-development-mode status",
        "link-static": [
            "rm -rf public/vendors",
            "ln -srv vendor/agusedyc/gentelella/vendors -T public/vendors",
            "cp -rv vendor/agusedyc/gentelella/src/* public/dashboard"
        ],

        "post-update-cmd": ["@link-static"],
        "post-create-project-cmd": ["@development-enable"],

        "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
    },

    "require-dev": {
        "zendframework/zend-test": "^3.0.1",
        "zendframework/zend-developer-tools": "^1.1.0",
        "tasmaniski/zend-current-route": "^2.0"
    },

    "autoload-dev": {
        "psr-4": {
            "ApplicationTest\\": "module/Application/test/"
        }
    }
}
